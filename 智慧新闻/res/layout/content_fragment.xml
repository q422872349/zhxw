<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_fg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <utils.NoScrollViewPager
        android:id="@+id/pager_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
    </utils.NoScrollViewPager>
    
    
    <RadioGroup 
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/darker_gray">
        
        <RadioButton 
            android:id="@+id/rb_home"
            style="@style/radioButton"
            android:drawableTop="@drawable/radio_home"
            android:text="首页"/>
        
         <RadioButton 
             android:id="@+id/rb_news"
            style="@style/radioButton"
            android:drawableTop="@drawable/radio_news"
            android:text="新闻中心"/>
          <RadioButton 
              android:id="@+id/rb_service"
            style="@style/radioButton"
            android:drawableTop="@drawable/radio_smartservice"
            android:text="智慧服务"/>
           <RadioButton 
               android:id="@+id/rb_gov"
            style="@style/radioButton"
            android:drawableTop="@drawable/radio_govaffairs"
            android:text="政务"/>
            <RadioButton 
                android:id="@+id/rb_settting"
            style="@style/radioButton"
            android:drawableTop="@drawable/radio_setting"
            android:text="设置"/>
    </RadioGroup>

</LinearLayout>